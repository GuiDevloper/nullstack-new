{
  "overrides": [
    {
      "files": [
        "./**"
      ],
      "excludedFiles": ["./projects/**"],
      "extends": "plugin:nullstack/recommended",
      "rules": {
        "nullstack/prettier": [
          "warn",
          {
            "trailingComma": "all",
            "tabWidth": 2,
            "semi": false,
            "singleQuote": true,
            "printWidth": 75,
            "arrowParens": "avoid",
            "singleAttributePerLine": true,
            "bracketSameLine": false
          },
          {
            "usePrettierrc": false
          }
        ]
      }
    }
  ]
}